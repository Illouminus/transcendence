{
	"compilerOptions": {
		"target": "es2017",
		"module": "CommonJS",
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true,
		"types": ["node"]
	},
	"include": [
		"src"
	],
	"exclude": [
		"node_modules",
		"**/node_modules/*",
		"**/node_modules/**/*.d.ts",
		"dist",
		"build",
		"coverage"
	]
}